  startday          = {25},
  finishyear        = {2018},
  finishmonth       = {Sep},
  finishday         = {27},
  isbn              = {9781509040261},
  conference        = {The 6th IEEE International Conference on Cloud Networking (IEEE CloudNet 2017)},
  day               = {18},
